#!/usr/bin/env bash

#
# ts to mp4
#

# 获取当前路径
GET_PATH=$(pwd)
# 定义 ts 存在的目录名
GET_DIR_NAME="$1"
# 定义输出的视频名
OUTPUT_NAME="$2"

# 进入临时目录
cd $(mktemp -d)

# 遍历 ts 文件 (a-z 顺序)
ls -A "$GET_PATH/$GET_DIR_NAME" | while read -r LINE
do
    echo -e "file '$GET_PATH/$GET_DIR_NAME/$LINE'" >> "ts.list"
done

# 转换
ffmpeg -f concat -safe 0 -i "ts.list" -c copy "$GET_PATH/$OUTPUT_NAME"
